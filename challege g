Seven Nation Army

use_bpm 120
use_synth :fm
use_synth_defaults sustain: 0.25
notes = [:e3,:e3,:g3,:e3,0,:d3,:c3,:b2]
rest = [1.5,0.5,0.75,0.25,0.5,0.5,2,2]
n=0
live_loop :white_stripes do
  8.times do
    print (n)
    play notes[n]
    sleep rest[n]
    n=n+1
    
  end
  n=0
end
sleep 16

live_loop :drums do
  sample :drum_cymbal_pedal
  sample :drum_heavy_kick
  sample :drum_tom_mid_hard
  sleep 1
  
end
